page {
  display: flex;
  align-items: center;
  justify-content: inherit;
  width: 100%;
  height: 100vh;
  flex-direction: column;
}
.navigateContainer {
  top: 0;
  width: 100%;
  z-index: 9999;
  position: fixed;
  background: #fff;
}
.navigateContainer .navigateBar {
  display: flex;
  margin: 0 auto;
  font-size: 32rpx;
  align-items: center;
  width: calc(100% - 30rpx);
  justify-content: space-between;
  width: 100%;
}
.navigateContainer .navigateBar view {
  flex: 1;
}
.navigateContainer .navigateBar .leftIcon {
  display: flex;
  align-items: center;
}
.navigateContainer .navigateBar .leftIcon image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 32rpx;
}
.navigateContainer .navigateBar .leftIcon .arrow {
  width: 24rpx;
  height: 48rpx;
}
.navigateContainer .navigateBar .title {
  font-weight: bold;
  text-align: center;
}
.page {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: inherit;
  width: 100%;
  overflow: auto;
  position: relative;
  flex-direction: column;
}
.page .box {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: inherit;
  width: 100%;
  overflow: auto;
  position: relative;
  flex-direction: column;
}
.page .box-mask {
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  position: absolute;
  background: rgba(0, 0, 0, 0.2);
}
.page .box .detail {
  width: 100%;
}
.page .box .list {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: inherit;
  width: 100%;
  overflow: auto;
  background: #F3F7F7;
  flex-direction: column;
}
.page .input {
  z-index: 1;
  width: 100%;
  flex-shrink: 0;
  padding: 12rpx 0;
  background: #fff;
}
.page .input .base {
  display: flex;
  align-items: center;
  justify-content: center;
}
.page .input .base .textarea {
  flex: 1;
  height: auto;
  width: 582rpx;
  margin: 0 32rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  border-radius: 24rpx;
  background: #F3F7F7;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.page .input .base .textarea textarea {
  flex: 1;
  padding: 16rpx 24rpx;
  min-height: 40rpx;
  max-height: 180rpx;
}
.page .input .base input {
  flex: 1;
  height: 76rpx;
  margin: 0 32rpx;
  font-size: 28rpx;
  padding: 18rpx 24rpx;
  border-radius: 24rpx;
  background: #F3F7F7;
  box-sizing: border-box;
}
.page .input-panel {
  height: 96rpx;
  padding: 0 32rpx;
  line-height: 96rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.page .input-panel .icon {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.page .input-panel .icon image {
  width: 64rpx;
  height: 64rpx;
  margin-right: 24rpx;
}
.page .input-panel .btn {
  height: 56rpx;
  color: #fff;
  padding: 0 28rpx;
  font-size: 28rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  background: #02BDD1;
}
.page .input-panel .default {
  color: #C3C8CE;
  background: #EDEDED;
}
.page .postDetail {
  width: 100%;
  flex-shrink: 0;
  display: flex;
  align-items: flex-start;
  justify-content: inherit;
  box-sizing: border-box;
  padding: 40rpx 24rpx 0;
  border-bottom: 1rpx solid #F3F7F7;
}
.page .postDetail .avatar {
  width: 68rpx;
  height: 68rpx;
  flex-shrink: 0;
  border-radius: 50%;
  margin-right: 20rpx;
}
.page .postDetail .detail {
  flex: 1;
}
.page .postDetail .detail .user {
  margin-bottom: 20rpx;
  display: inline-block;
}
.page .postDetail .detail .user-name {
  font-size: 28rpx;
  overflow: hidden;
  color: #2A2B2D;
  margin-bottom: 2rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.page .postDetail .detail .user-time {
  font-size: 24rpx;
  color: #93989E;
}
.page .postDetail .detail-reply {
  font-size: 28rpx;
  color: #62676D;
}
.page .postDetail .detail-reply text {
  color: #000;
  font-weight: 600;
}
.page .postDetail .detail-txt {
  display: block;
  flex-wrap: wrap;
  font-size: 28rpx;
  color: #2A2B2D;
  overflow: hidden;
  word-break: break-all;
}
.page .postDetail .detail-txt .blue {
  color: #02BDD1;
  display: inline;
  position: relative;
}
.page .postDetail .detail-txt .blue .image {
  top: 4rpx;
  width: 32rpx;
  height: 32rpx;
  position: absolute;
}
.page .postDetail .detail .panel {
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.page .postDetail .detail .panel image {
  width: 32rpx;
  height: 32rpx;
}
.page .postDetail .detail .panel .operation {
  flex: 1;
  font-size: 24rpx;
  color: #62676D;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.page .postDetail .detail .panel .operation .icon {
  display: flex;
  align-items: center;
  justify-content: inherit;
  margin-right: 60rpx;
}
.page .postDetail .detail .panel .operation .icon image {
  margin-right: 8rpx;
}
.none {
  flex: 1;
  width: 100%;
  font-size: 28rpx;
  color: #93989E;
  flex-direction: column;
  display: flex;
  align-items: center;
  justify-content: center;
}
.none image {
  width: 92rpx;
  height: 78rpx;
  margin-bottom: 28rpx;
}
