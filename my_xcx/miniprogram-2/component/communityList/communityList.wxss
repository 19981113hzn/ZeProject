.community {
  background: #f3f3f3;
}
.community-item {
  margin-top: 16rpx;
  position: relative;
  background: #fff;
  padding: 40rpx 24rpx 0;
  box-sizing: border-box;
}
.community-item:first-child {
  margin-top: 0;
}
.community-item .tags {
  top: 0;
  right: 0;
  height: 48rpx;
  font-size: 24rpx;
  color: #62676D;
  position: absolute;
  padding: 0 24rpx;
  background: #F0F2F2;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 0 0 16rpx;
}
.community-item .fail {
  color: #ed510b;
  background: rgba(237, 81, 11, 0.1);
}
.community-item .fail .image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}
.community-item .panel {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.community-item .panel-user {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.community-item .panel-user .image {
  width: 68rpx;
  height: 68rpx;
  flex-shrink: 0;
  border-radius: 50%;
  margin-right: 20rpx;
}
.community-item .panel-user .desc {
  font-size: 24rpx;
  color: #93989E;
}
.community-item .panel-user .desc-name {
  font-size: 28rpx;
  overflow: hidden;
  color: #2A2B2D;
  margin-bottom: 2rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.community-item .panel-menu {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
  margin-left: 60rpx;
}
.community-item .content {
  margin: 24rpx 0 0;
}
.community-item .content-txt {
  display: block;
  flex-wrap: wrap;
  font-size: 28rpx;
  color: #2A2B2D;
  overflow: hidden;
  word-break: break-all;
}
.community-item .content-txt .linkIcon {
  width: 32rpx;
  height: 32rpx;
  transform: translateY(2px);
}
.community-item .content-txt .blue {
  color: #02BDD1;
  display: inline;
  position: relative;
}
.community-item .content-txt .blue .image {
  top: 4rpx;
  width: 32rpx;
  height: 32rpx;
  position: absolute;
}
.community-item .content-txt .limit {
  display: inline;
  color: #02BDD1;
}
.community-item .content-img {
  flex-wrap: wrap;
  padding-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.community-item .content-img .one {
  width: 700rpx;
  height: 376rpx;
}
.community-item .content-img .multi {
  width: 228rpx;
  height: 228rpx;
  margin: 0 6rpx 6rpx 0;
}
.community-item .operation {
  height: 74rpx;
  font-size: 24rpx;
  color: #62676D;
  line-height: 74rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.community-item .operation-talk,
.community-item .operation-like {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.community-item .operation-talk .image,
.community-item .operation-like .image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}
.community-none {
  font-size: 28rpx;
  color: #93989E;
  padding: 24rpx 0;
  margin-top: 16rpx;
  text-align: center;
  background: #fff;
}
.none {
  font-size: 28rpx;
  color: #93989E;
  padding: 120rpx 0;
  flex-direction: column;
  display: flex;
  align-items: center;
  justify-content: center;
}
.none .image {
  width: 92rpx;
  height: 78rpx;
  margin-bottom: 28rpx;
}
.actionSheet {
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 10000;
  position: fixed;
  flex-direction: column;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background: rgba(0, 0, 0, 0.5);
}
.actionSheet .dialog {
  width: 100%;
  color: #000;
  font-size: 34rpx;
  background: #f2f2f2;
  border-radius: 24rpx 24rpx 0 0;
}
.actionSheet .dialog-item {
  padding: 32rpx 0;
  text-align: center;
  line-height: unset;
  background: #fff;
  border-bottom: 1rpx solid #f2f2f2;
}
.actionSheet .dialog-item:first-child {
  border-radius: 24rpx 24rpx 0 0;
}
.actionSheet .dialog-cancel {
  border: 0;
  margin-top: 16rpx;
}
