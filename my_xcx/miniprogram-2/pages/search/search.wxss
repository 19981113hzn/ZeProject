page {
  height: 100%;
  background: #F3F7F7;
}
.searchPage{
	height: 100%;
	display: flex;
	flex-direction: column;
}
.listPage{
	flex: 1;
	padding: 0 0 12px;
	overflow: auto;
}
/* 搜索框 */
.searchPage .searchBox {
	position: relative;
	display: flex;
	align-items: center;
	background: #FFFFFF;
	padding: 10px 20px 10px 16px;
}
.searchPage .searchBox .search {
	position: absolute;
	width: 16px;
	height: 16px;
	left: 30px;
	top: 22px;
}
.searchPage .searchBox .icon {
	position: absolute;
	width: 15px;
	height: 15px;
	right: 52px;
	padding: 10px 20px;
	z-index: 1000;
}
.searchPage .searchBox input {
	flex: 1;
	background: #F3F7F7;
	border-radius: 20px;
	padding: 9px 38px 9px 38px;
}
.searchPage .searchBox .text {
	font-size: 14px;
	color: #02BDD1;
	padding: 10px 0 10px 12px;
}

/* 导航栏 */
.searchPage .navigation {
	position: relative;
	display: flex;
	background: #fff;
	height: 44px;
}
.searchPage .navigation .text {
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 14px;
	color: #93989E;
}
.searchPage .navigation .activeText {
	color: #2A2B2D;
}
.searchPage .navigation .line {
	position: absolute;
	bottom: 0;
	left: 166rpx;
	border-bottom: 3px solid #02BDD1;
	border-radius: 1.5px;
	width: 20px;
}


/* 搜索热门 */
.searchPage .content {
	position: fixed;
	background: #fff;
	width: 100%;
	height: 100%;
	margin-top: 10px;
	padding: 20px;
	box-sizing: border-box;
}
.searchPage .content .hot .title {
	font-size: 14px;
	color: #2A2B2D;
}

.searchPage .content .labelWapper {
	margin-bottom: 30px;
}
.searchPage .content .labelWapper .label {
	display: inline-block;
	border: 1px solid #CACCD2;
	border-radius: 4px;
	padding: 4px 9px;
	margin-right: 12px;
	margin-top: 12px;
}
.searchPage .content .labelWapper .label .text {
	font-size: 12px;
	color: #62676D;
	text-align: center;
}


/* 搜索历史 */
.searchPage .historyInfo .historyPack {
	display: flex;
	align-items: center;
}
.searchPage .historyInfo .historyPack .title {
	flex: 1;
	font-size: 14px;
	color: #2A2B2D;
}
.searchPage .historyInfo .historyPack image {
	width: 16px;
	height: 16px;
} 

.searchPage .shadeWapper {
	width: 100%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
}
.searchPage .shadeWapper .shadePack {
	text-align: center;
}
.searchPage .shadeWapper .shadePack image {
	width: 46px;
	height: 39px;
}
.searchPage .shadeWapper .shadePack .text {
	font-size: 14px;
	color: #93989E;
	text-align: center;
	margin-top: 10px;
}

.box {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.box .menuTips {
  position: relative;
  background: #fff;
}
.box .menuTips .tips {
  display: flex;
  font-size: 24rpx;
  color: #62676D;
  padding: 28rpx 40rpx;
}
.box .menuTips .tips .arrow {
  width: 30rpx;
  height: 30rpx;
  margin-left: 4rpx;
}
.box .menuTips .showMenu {
  z-index: 1;
  width: 100%;
  color: #62676D;
  font-size: 28rpx;
  position: absolute;
  background: #fff;
  padding: 0 40rpx;
}
.box .menuTips .showMenu .label {
  display: flex;
  font-size: 28rpx;
  color: #62676D;
  margin-bottom: 20rpx;
  width: calc(100% - 80rpx);
  justify-content: space-between;
}
.box .menuTips .showMenu .label .now {
  color: #2A2B2D;
}
.box .menuTips .showMenu .label .icon {
  width: 28rpx;
  height: 22rpx;
}
.box .list {
  flex: 1;
  overflow: auto;
}
.box .mask {
  overflow: hidden;
  position: relative;
}
.box .mask::after {
  top: 0;
  left: 0;
  width: 100%;
  content: '';
  height: 100%;
  position: absolute;
  background: rgba(0, 0, 0, 0.6);
}